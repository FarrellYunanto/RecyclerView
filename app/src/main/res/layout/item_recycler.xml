<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imgp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_android_black_24dp"/>

        <TextView
            app:layout_constraintLeft_toRightOf="@id/imgp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/namap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Wayang"/>

        <TextView
            app:layout_constraintLeft_toRightOf="@id/imgp"
            app:layout_constraintTop_toBottomOf="@id/namap"
            android:id="@+id/karap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Karakter Wayang"/>

        <TextView
            app:layout_constraintLeft_toRightOf="@id/imgp"
            app:layout_constraintTop_toBottomOf="@id/karap"
            android:id="@+id/desp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="deskripsi wayang"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>